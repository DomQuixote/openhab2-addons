         <property name="ObjectID">7</property>
         <property name="ObjectURN">TBD</property>
         <property name="MultipleInstances">Single</property>
         <property name="Mandatory">Optional</property>
      </properties>
      <channels>
         <channel id="SMSTxCounter" typeId="0"/>
         <channel id="SMSRxCounter" typeId="1"/>
         <channel id="TxData" typeId="2"/>
         <channel id="RxData" typeId="3"/>
         <channel id="MaxMessageSize" typeId="4"/>
         <channel id="AverageMessageSize" typeId="5"/>
